<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    >

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/r2"
        android:elevation="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back"
        android:padding="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/appname"
            android:textAppearance="@style/productsans"
            android:textSize="25sp" />

        <ScrollView
            android:layout_marginTop="25dp"
            android:id="@+id/scr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt">


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans"

            android:text="@string/emph"
            android:textAppearance="@style/productsans"
            android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailtxt"
                android:id="@+id/emaileidt"
                android:background="@drawable/exittext"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:elevation="5dp"/>

        <TextView
            android:id="@+id/passtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emaileidt"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/product_sans"
            android:text="@string/pass"
            android:textAppearance="@style/productsans"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passtxt"
            android:id="@+id/passeidt"
            android:background="@drawable/exittext"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:elevation="5dp"/>

        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passeidt"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/product_sans"
            android:text="@string/forgotpass"
            android:textAppearance="@style/productsans"
            android:textColor="@color/minimalRed0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/createacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotpass"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/product_sans"
            android:text="@string/createacc"
            android:textAppearance="@style/productsans"
            android:textColor="@color/minimalRed0"
            android:textSize="15sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passeidt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/button"
            android:fontFamily="@font/product_sans"
            android:text="LOGIN"
            android:textAppearance="@style/productsans"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <RelativeLayout
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/redcir"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/facebook"
            android:layout_marginEnd="30dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/google1"
                android:layout_centerInParent="true"
                android:elevation="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dbluecir"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/facebook"
                android:layout_centerInParent="true"
                android:elevation="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lbluecir"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/facebook"
            android:layout_marginStart="30dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/twitter"
                android:layout_centerInParent="true"
                android:elevation="8dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>